{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "spec": false,
    "baseDir": "src/modules"
  },
  "compilerOptions": {
    "builder": "webpack",
    "deleteOutDir": true,
    "assets": ["mail/templates/**/*"],
    "watchAssets": true
  }
}
